{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "defendantProgressionId": {
      "type": "string"
    },
    "defendantId": {
      "type": "string"
    },
    "caseProgressionId": {
      "type": "string"
    },
    "sentenceHearingReviewDecision": {
      "type": "boolean"
    },
    "sentenceHearingReviewDecisionDateTime": {
      "type": "string"
    },
    "additionalInformation": {
      "type": "object",
      "properties": {
        "probation": {
          "type": "object",
          "properties": {
            "preSentenceReport": {
              "type": "object",
              "properties": {
                "psrIsRequested": {
                  "type": "boolean"
                },
                "provideGuidance": {
                  "type": "string"
                },
                "drugAssessment": {
                  "type": "boolean"
                }
              }
            },
            "dangerousnessAssessment": {
              "type": "boolean"
            }
          }
        },
        "defence": {
          "type": "object",
          "properties": {
            "statementOfMeans": {
              "type": "object",
              "properties": {
                "isStatementOfMeans": {
                  "type": "boolean"
                },
                "details": {
                  "type": "string"
                }
              }
            },
            "medicalDocumentation": {
              "type": "object",
              "properties": {
                "isMedicalDocumentation": {
                  "type": "boolean"
                },
                "details": {
                  "type": "string"
                }
              }
            },
            "otherDetails": {
              "type": "string"
            }
          }
        },
        "prosecution": {
          "type": "object",
          "properties": {
            "ancillaryOrders": {
              "type": "object",
              "properties": {
                "isAncillaryOrders": {
                  "type": "boolean"
                },
                "details": {
                  "type": "string"
                }
              }
            },
            "otherDetails": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": [
    "defendantProgressionId",
    "defendantId",
    "caseProgressionId",
    "sentenceHearingReviewDecision",
    "sentenceHearingReviewDecisionDateTime"
  ]
}